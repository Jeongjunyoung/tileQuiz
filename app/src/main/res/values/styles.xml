<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TileFrontImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:background">@drawable/tile_image</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="TileBackImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="TileLinearLayout">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="TilePaddingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="QuizBackgroundLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#b9d7b0</item>
    </style>
    <style name="LifeImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/icon_life</item>
    </style>
    <style name="ContentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">Content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
